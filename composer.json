{
	"name": "drahak/restful",
	"type": "library",
	"description": "Nette REST API bundle",
	"keywords": ["nette", "rest", "api", "drahak"],
	"homepage": "http://www.drahak.eu",
	"license": ["BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
	"authors": [
		{
			"name": "Drahomír Hanák",
			"homepage": "http://www.drahak.eu"
		}
	],
	"config": {
		"vendor-dir": "libs"
	},
	"require": {
		"php": ">= 5.3.0",
		"nette/application": "~2.0|~3.0",
		"nette/bootstrap": "~2.0|~3.0",
		"nette/caching": "~2.0|~3.0",
		"nette/deprecated": "~2.0|~3.0",
		"nette/di": "~2.0|~3.0",
		"nette/http": "~2.0|~3.0",
		"nette/reflection": "~2.0|~3.0",
		"nette/robot-loader": "~2.0|~3.0",
		"nette/security": "~2.0|~3.0",
		"nette/utils": "~2.0|~3.0"
	},
	"require-dev": {
		"drahak/oauth2": "dev-master",
		"nette/tester": "~1.3",
		"janmarek/mockista": "1.0.0",
		"jakub-onderka/php-parallel-lint": "~0.8"
	},
	"autoload": {
		"psr-0": {
			"Drahak\\Restful": "src/"
		},
		"classmap": [
			"src/Drahak/Restful/exceptions.php",
			"src/Drahak/Restful/Application/exceptions.php",
			"src/Drahak/Restful/Mapping/exceptions.php",
			"src/Drahak/Restful/Security/exceptions.php",
			"src/Drahak/Restful/Validation/exceptions.php"
		]
	}
}
